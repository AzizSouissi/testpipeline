pipeline {
    agent any
    
    stages {
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Unit Test') {
            steps {
                sh 'node -v'
            }
        }
        
        stage('Build application') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
